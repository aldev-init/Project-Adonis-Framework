<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
  <title>Data Mahasiswa</title>
</head>
<body>

<div class="container" style="margin-top: 80px">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header">
          Edit Mahasiswa
        </div>
        <div class="card-body">
          <form action="{{ route('mahasiswa.update',{id: mahasiswa.id}) }}" method="POST">
            {{ csrfField() }}
            <div class="form-group">
              <label>NAMA</label>
              <input class="form-control" type="text" name="nama" placeholder="Masukkan Nama Mahasiswa" value="{{mahasiswa.nama}}">
            </div>
            <div class="form-group">
              <label>PRODI</label>
              <input class="form-control" type="text" name="prodi" placeholder="Masukkan Prodi Mahasiswa" value="{{mahasiswa.prodi}}">
            </div>
            <div class="form-group">
              <label>NIM</label>
              <input class="form-control" type="text" name="nim" placeholder="Masukkan Nim Mahasiswa" value="{{mahasiswa.nim}}">
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-md btn-success">SIMPAN</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
</body>
</html>
